    "release:patch": "npm version patch -m 'Release v%s'",
    "stage": "firebase deploy -P philipwalton-staging",
    "start": "gulp watch",
    "test": "gulp test",
    "version": "NODE_ENV=production gulp build",
    "postversion": "npm run deploy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
