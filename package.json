    "deploy": "git push --follow-tags && firebase deploy -P philipwalton-site",
    "lint": "eslint \"assets/**/*.js\" \"tasks/**/*.js\" \"test/**/*.js\"",
    "release:major": "npm version major -m 'Release v%s'",
